<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.harmoniamusic.HomeTemplateController">
   <children>
      <VBox prefHeight="400.0" prefWidth="600.0">
         <children>
            <!-- TOP BAR placeholder -->
            <AnchorPane fx:id="bar" prefHeight="73.0" prefWidth="600.0" style="-fx-background-color: cyan;" />

            <StackPane prefHeight="322.0" prefWidth="600.0">
               <children>
                  <!-- MAIN CONTENT placeholder -->
                  <ScrollPane prefHeight="111.0" prefWidth="434.0">
                     <content>
                        <AnchorPane fx:id="data" prefHeight="319.0" prefWidth="594.0" />
                     </content>
                  </ScrollPane>

                  <!-- Some other hidden VBox -->
                  <VBox managed="false" visible="false" prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <Button fx:id="MySongButton" mnemonicParsing="false" prefHeight="54.0" prefWidth="116.0" text="My Songs" />
                        <Button fx:id="SearchSongButton" mnemonicParsing="false" prefHeight="54.0" prefWidth="115.0" text="Search Songs" />
                        <Button fx:id="FavoriteSongButton" mnemonicParsing="false" prefHeight="54.0" prefWidth="114.0" text="Favorite Songs" />
                        <Button fx:id="FavoriteAuthorButton" mnemonicParsing="false" prefHeight="54.0" prefWidth="116.0" text="Favorite Authors" />
                     </children>
                  </VBox>
               </children>
            </StackPane>
         </children>
      </VBox>
   </children>
</StackPane>
