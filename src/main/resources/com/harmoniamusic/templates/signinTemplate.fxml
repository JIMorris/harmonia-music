               <font>
                  <Font name="Arial Bold" size="22.0" />
               </font>
            </Label>
            <Label layoutX="130.0" layoutY="200.0" text="Username">
               <font>
                  <Font name="Arial" size="20.0" />
               </font>
            </Label>
            <TextField fx:id="username_txt" layoutX="130.0" layoutY="229.0" prefHeight="32.0" prefWidth="240.0" />
